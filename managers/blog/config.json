{
	"name": "blog",
	"title": "Blog",
	"description": "A standard blog manager with additional categories and authors datatable.",
	"version": 1,
	"category": "Marketing",
	"author": "Solodev",
	"authorWebsite": "https://www.solodev.com/",
	"projectURL": "https://github.com/solodev/marketplace/managers/blog/",
	"featuredImage": "featured-image.jpg",
	"entryPoint": {	
		"path": "/<!manager_name!>",
		"type": "Calendar"
	},
	"dependencies": {
		"solodevCMS": "8.9"
	},
	"Asset_File": [
		{
			"name": "blog-form.tpl",
			"from_path": "/_Assets/blog-form.tpl",
			"to_path": "/_Assets/blog-form.tpl"
		},
		{
			"name": "blog-author-form.tpl",
			"from_path": "/_Assets/blog-author-form.tpl",
			"to_path": "/_Assets/blog-author-form.tpl"
		}
	],
	"Calendar": [
		{
			"name": "<!manager_name!>",
			"module_type": "Calendar",
			"display_type": "Forum",
			"has_photo_gallery": "0",
			"to_path": "/<!manager_name!>",
			"icon_type": "fas fa-rss-square",
			"form_template": {
				"file_path": "/_Assets/blog-form.tpl"
			},
			"datatable_category_group": "/<!manager_name!> Categories",
			"entries": []
		}
	],
	"Datatable_Category_Group": [
		{
			"module_type": "Datatable_Category_Group",
			"name": "<!manager_name!> Categories",
			"to_path": "/<!manager_name!> Categories",
			"categories": [
				{
					"name": "blog-posts",
					"title": "Blog Posts",
					"menu": null
				},
				{
					"name": "case-studies",
					"title": "Case Studies",
					"menu": null
				},
				{
					"name": "news",
					"title": "News",
					"menu": null
				},
				{
					"name": "press-releases",
					"title": "Press Releases",
					"menu": null
				}
			]
		}
	],
	"Asset_Category": [
		{
			"from_path": "/_Assets",
			"to_path": "/_Assets"
		}
	]
}